<%= simple_form_for(employee) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
        <% employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="Name">Name</label>
    <%= form.text_field :name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <label for="Salary">Salary</label>
    <%= form.number_field :salary, :class => "form-control" %>
  </div>

  <%= form.input :company_id, :as => :hidden %>

  <%= button_tag :button, :type => 'submit', :class => 'btn btn-outline-secondary' do %>
    <span>Save</span>
  <% end %>
  <%= link_to 'Back', company_employees_path(@employee.company), :class => 'btn btn-secondary' %>
<% end %>
