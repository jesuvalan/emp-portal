<p id="notice"><%= notice %></p>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="<%= root_path %>">Home</a></li>
    <li class="breadcrumb-item"><a href="<%= companies_path %>">Companies</a></li>
    <li class="breadcrumb-item"><a href="<%= company_path(@company) %>"><%= @company.name %></a></li>
    <li class="breadcrumb-item active" aria-current="page">Employees</li>
  </ol>
</nav>
<div class="row">
  <div class="col-12">
    <div class='well col-xs-12'>
      <%= link_to 'New Employee', new_employee_path(:company_id => @company.id) , :class => 'btn btn-outline-dark float-right' %>
      <h2>Employees</h2>
    </div>

    <table class='table table-striped'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Salary</th>
          <th>Company</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.salary %></td>
            <td><%= employee.company.name %></td>
            <td>
              <%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-danger btn-sm float-right" %>
              <%= link_to 'Edit', edit_employee_path(employee), :class => "btn btn-outline-secondary btn-sm float-right" %>
              <%= link_to 'Show', employee, :class => "btn btn-outline-secondary btn-sm float-right" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>